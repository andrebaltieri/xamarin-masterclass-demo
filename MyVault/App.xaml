<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyVault.App">
    <Application.Resources>
        <ResourceDictionary>
            <OnPlatform x:TypeArguments="x:String" x:Key="BoldFont">
                <On Platform="Android" Value="Poppins-Black.ttf#Open Sans" />
                <On Platform="UWP" Value="/Assets/Poppins-Black.ttf#Open Sans" />
                <On Platform="iOS" Value="Poppins-Black" />
            </OnPlatform>
            <OnPlatform x:TypeArguments="x:String" x:Key="NormalFont">
                <On Platform="Android" Value="Poppins-Regular.ttf#Open Sans" />
                <On Platform="UWP" Value="/Assets/Poppins-Regular.ttf#Open Sans" />
                <On Platform="iOS" Value="Poppins-Regular" />
            </OnPlatform>
        </ResourceDictionary>
    </Application.Resources>
</Application>